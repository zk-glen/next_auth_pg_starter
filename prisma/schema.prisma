generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  ADMIN
  STAFF
  CUSTOMER
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  role     UserRole @default(CUSTOMER)
}

